<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.viewController.SignInViewController">
   <children>
      <StackPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#aae3b6" height="387.0" stroke="BLACK" strokeType="INSIDE" width="584.0" />
            <ImageView fx:id="backgroundImageView" fitHeight="401.0" fitWidth="599.0" pickOnBounds="true" preserveRatio="true" />
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <ImageView fx:id="topLogoImageView" fitHeight="150.0" fitWidth="252.0" pickOnBounds="true" preserveRatio="true" />
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="600.0" spacing="2.0">
                           <children>
                              <Label text="Username: " />
                              <TextField fx:id="usernameTextField" prefHeight="25.0" prefWidth="168.0" promptText="Type username or email" />
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <VBox.margin>
                              <Insets left="150.0" />
                           </VBox.margin>
                        </HBox>
                        <Label fx:id="usernameHelpLabel">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="600.0" spacing="2.0">
                           <children>
                              <Label text="Password: " />
                              <StackPane prefHeight="26.0" prefWidth="171.0">
                                 <children>
                                    <TextField fx:id="passwordTextField" />
                                    <PasswordField fx:id="hiddenPasswordField" promptText="Type password" />
                                 </children>
                              </StackPane>
                              <Button fx:id="viewPasswordButton" mnemonicParsing="false">
                                 <graphic>
                                    <ImageView fx:id="viewPasswordImageView" fitHeight="18.0" fitWidth="17.0" pickOnBounds="true" />
                                 </graphic>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets left="150.0" />
                           </VBox.margin>
                        </HBox>
                        <Label fx:id="passwordHelpLabel">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="27.0" prefWidth="600.0" spacing="40.0">
                     <children>
                        <Button fx:id="enterButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" text="Enter">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Label fx:id="forgotPasswordLabel" text="Forgot password?" textFill="#111111">
                           <font>
                              <Font name="System Italic" size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Label fx:id="createNewAccountLabel" text="Create New Account" />
                  <Label fx:id="browseProductsWithoutAccountLabel" text="Browse products without account" />
               </children>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
               <padding>
                  <Insets bottom="15.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
