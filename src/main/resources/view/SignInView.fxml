<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewController.SignInViewController">
   <children>
      <StackPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <ImageView fx:id="backgroundImageView" fitHeight="401.0" fitWidth="599.0" pickOnBounds="true" preserveRatio="true" />
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <ImageView fx:id="topLogoImageView" fitHeight="171.0" fitWidth="252.0" pickOnBounds="true" preserveRatio="true" />
                  <HBox alignment="CENTER" prefHeight="26.0" prefWidth="600.0" spacing="2.0">
                     <children>
                        <Label text="Username: " />
                        <TextField fx:id="usernameTextField" prefHeight="25.0" prefWidth="168.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="160.0" prefHeight="25.0" prefWidth="600.0" spacing="2.0">
                     <children>
                        <Label text="Password: " />
                        <TextField fx:id="passwordTextField" />
                        <Button fx:id="viewPasswordButton" mnemonicParsing="false" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="27.0" prefWidth="600.0" spacing="60.0">
                     <children>
                        <Button fx:id="enterButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" text="Enter">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Label fx:id="forgotPaswwordLabel" text="Forgot password?" textFill="#111111">
                           <font>
                              <Font name="System Italic" size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Label fx:id="createNewAccountLabel" text="Create New Account" />
                  <Label fx:id="browseProductsWithoutAccountLabel" text="Browse products without account" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
